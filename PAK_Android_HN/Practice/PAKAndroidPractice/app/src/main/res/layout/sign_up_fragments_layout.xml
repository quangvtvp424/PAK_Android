<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/layout_linear">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textSize="70px"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20px"
        android:layout_marginTop="15px"
        android:text="WHO YOU ARE?"
        android:textColor="#7D82A8"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:background="@drawable/avatar_blue_drawable" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10px"
                android:text="Đức cớp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:background="@drawable/avatar_green_drawable" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10px"
                android:text="T.Anh"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:background="@drawable/avatar_red_drawable" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10px"
                android:text="Thịnh"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:background="@drawable/avatar_violet_drawable" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10px"
                android:text="H.Anh"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:background="@drawable/avatar_yellow_drawable" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10px"
                android:text="Vũ Đức"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginTop="30px"
        android:background="@drawable/et_signup_drawable"
        android:drawableLeft="@mipmap/ic_person_white_24dp"
        android:drawablePadding="20px"
        android:hint="Username"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="20px"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#7D82A8" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:background="@drawable/et_signup_drawable"
        android:drawableLeft="@mipmap/ic_mail_outline_white_24dp"
        android:drawablePadding="20px"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="20px"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#7D82A8" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:background="@drawable/et_signup_drawable"
        android:drawableLeft="@mipmap/ic_lock_outline_white_24dp"
        android:drawablePadding="20px"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20px"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#7D82A8" />


    <EditText
        android:id="@+id/etConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40px"
        android:background="@drawable/et_signup_drawable"
        android:drawableLeft="@mipmap/ic_lock_outline_white_24dp"
        android:drawablePadding="20px"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="20px"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#7D82A8" />

    <CheckBox
        android:id="@+id/cbCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginTop="20px"
        android:background="@drawable/clickbtn_drawable"
        android:text="SignUp"
        android:textColor="#FFFFFF" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:text="Already have an account."
            android:textColor="#FFFFFF"
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Login here"
            android:textColor="#E37434"
            android:textSize="40px"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>